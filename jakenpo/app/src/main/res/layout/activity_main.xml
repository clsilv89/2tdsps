<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewPadrao"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:src="@drawable/padrao" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="48dp"
        android:text="Selecione uma opção:"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewPapel"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_weight="1"
            android:src="@drawable/papel" />

        <ImageView
            android:id="@+id/imageViewPedra"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_weight="1"
            android:src="@drawable/pedra" />

        <ImageView
            android:id="@+id/imageViewTesoura"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_weight="1"
            android:src="@drawable/tesoura" />

    </LinearLayout>

</LinearLayout>